{
  "name": "smartliving-control",
  "version": "0.1.0",
  "description": "Desktop app for controlling Samsung SmartThings devices from the system tray",
  "main": "src/main/main.js",
  "scripts": {
    "dev": "electron .",
    "build": "electron-builder build --mac",
    "test": "jest",
    "test:e2e": "playwright test",
    "lint": "eslint src/",
    "start": "electron ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/techwavedev/smartliving-control.git"
  },
  "author": "TechWave Dev",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "@playwright/test": "^1.40.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.techwavedev.smartliving-control",
    "productName": "SmartLiving Control",
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    }
  }
}
